    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="Categories"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPenguin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <Button
        android:id="@+id/buttonPenguin"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="#E41414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Penguin"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">

    </Button>


    <Button
        android:id="@+id/button_dog"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="#E41414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Dogs"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

    </Button>

    <Button
        android:id="@+id/buttonCats"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="#E41414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Cats"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

    </Button>

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="63dp"
        android:layout_height="59dp"

        android:backgroundTint="#E41414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"

        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228">

    </Button>

    <Button
        android:id="@+id/button_purple"
        android:layout_width="63dp"
        android:layout_height="59dp"

        android:backgroundTint="#AF87E3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"

        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227">

    </Button>

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="63dp"
        android:layout_height="59dp"

        android:backgroundTint="#7377DE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"

        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227">

    </Button>

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="63dp"
        android:layout_height="59dp"

        android:backgroundTint="#F6DA91"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"

        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227">

    </Button>

    <Button
        android:id="@+id/buttonBlack"
        android:layout_width="63dp"
        android:layout_height="59dp"

        android:backgroundTint="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"

        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227">

    </Button>

    <Button
        android:id="@+id/buttonNature"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="#E41414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Nature"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="More option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

    </Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="More options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toEndOf="@+id/button2">

    </Button>

    <Button
        android:id="@+id/buttonLions"
        android:layout_width="147dp"
        android:layout_height="51dp"

        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Animals"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toEndOf="@+id/buttonCars"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnime"
        app:layout_constraintVertical_bias="1.0">

    </Button>

    <Button
        android:id="@+id/buttonAnime"
        android:layout_width="141dp"
        android:layout_height="38dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Anime"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/buttonLions"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCars">

    </Button>

    <Button
        android:id="@+id/buttonCars"
        android:layout_width="151dp"
        android:layout_height="45dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Cars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#F44336">

    </Button>

    <Button
        android:id="@+id/buttonPlanes"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="47dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Planes"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

    </Button>

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_icons8_home" />

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="284dp"
        app:layout_constraintBottom_toBottomOf="@+id/homeButton"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bird" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/flower" />

    <TextView
        android:id="@+id/Birds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Birds"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flowers"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />


</androidx.constraintlayout.widget.ConstraintLayout>